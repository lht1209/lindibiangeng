<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="省:"
                android:id="@+id/tvsheng"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="新疆"
                android:id="@+id/tvshengming"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingStart="19dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
               />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="市:"
                android:id="@+id/tvshi"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="阿克苏"
                android:id="@+id/tvshiming"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingStart="19dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
               />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="县:"
                android:id="@+id/tvxian"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="库车"
                android:id="@+id/tvxianming"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingStart="19dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="乡:"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvxiang"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:spinnerMode="dialog"
                android:id="@+id/sxiangming"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="坡位:"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvpowei"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:spinnerMode="dialog"
                android:id="@+id/spoweiming"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="坡向:"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvpoxiang"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:spinnerMode="dialog"
                android:id="@+id/spoxiangming"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="坡度:"
                android:id="@+id/tvpodu"
                android:layout_gravity="center_vertical"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:spinnerMode="dialog"
                android:id="@+id/spoduming"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="地貌:"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvdimao"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:textSize="19sp"                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:spinnerMode="dialog"
                android:id="@+id/sdimaoming"
                />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
